.PHONY : all clean veryclean build no-cache upload push

tag=bs4-buildenv-$(distro)


all : build

clean :
	rm -f buildenv.sh

veryclean : clean
	$(rm) -rf mozilla-unified
	-$(docker) rmi $(tag)

mozilla-unified :
	cp -r ../bootstrap/mozilla-unified .

build :
	make -C ../bootstrap all
	cp ../../scripts/buildenv.sh .
	$(rm) -rf mozilla-unified
	make mozilla-unified
	sudo script -e -c "time docker build -t $(tag) ."
	$(rm) -rf mozilla-unified

no-cache :
	make -C ../bootstrap all
	cp ../../scripts/buildenv.sh .
	$(rm) -rf mozilla-unified
	make mozilla-unified
	sudo script -e -c "time docker build --no-cache -t $(tag) ."
	$(rm) -rf mozilla-unified

upload : push

push : build
	$(docker) push $(tag)

shell : 
	#-$(docker) run -it --rm --privileged -v $(shell pwd)/mozilla-unified:/mozilla-unified:rw $(tag) bash
	-$(docker) run -it --rm --privileged $(tag) bash
